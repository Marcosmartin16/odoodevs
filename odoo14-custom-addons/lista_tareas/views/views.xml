<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Definimos como es la vista explicita de la litas-->
    <record model="ir.ui.view" id="lista_tareas.list">
      <field name="name">lista_tareas list</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
        <!--<calendar date_start="date-assign" date_stop="date-end" color="project_id">
          <field name="name"/>
          <field nmae="user_id"/>
        </calendar>-->
        <tree decoration-success="realizada == True">
          <field name = "avatar" widget = "image" class = "oe_avatar"/>
          <field name="tarea"/>
          <field name="prioridad" widget="percentpie"/>
          <field name="urgente"/>
          <field name="realizada"/>
          <field name = "fecha"/>
        </tree>
        
      </field>
    </record>

    <!-- actions opening views on models -->
    <!-- Acciones al abrir las vistas en los modelos 
    https://www.odoo.com/documentation/14.0/developer/reference/addons/actions.html
    -->

    <record model="ir.actions.act_window" id="lista_tareas.action_window">
      <field name="name">Listado de tareas pendientes</field>
      <field name="res_model">lista_tareas.lista_tareas</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!--<record id='action_tareas_calender' model='ir.action.act_window'>
      <field name = "name">Mis tareas (CALENDARIO)</field>
      <field name = "res_model">project.task</field>
      <field name="view_mode"> calendar,tree,form</field>
      <field name ="context">{'calendar_view_ref': 'my_project.tareas_calender_view'}</field>
    </record>

    <menuitem id="menu_custom_top_level" name="mis tareas (calendario)" web_icon="my_project,static/description/icon.png"/>
    <menuitem id="menu_tareas_calender" parent="menu_custom_top_level" action="action_tareas_calender" sequence="10"/>-->


    <!-- Top menu item -->

    <menuitem name="lista_tareas" id="lista_tareas.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Users" id="lista_tareas.menu_1" parent="lista_tareas.menu_root"/>
    <menuitem name="Community" id="lista_tareas.menu_2" parent="lista_tareas.menu_root"/>
    <menuitem name="Nuevo menu" id="lista_tareas.menu_3" parent="lista_tareas.menu_root"/>
    <!-- new menu entries -->
    
    <menuitem name="List" id="lista_tareas.menu_1_list" parent="lista_tareas.menu_1" action="lista_tareas.action_window"/>
    <menuitem name="Local" id="lista_tareas.menu_2_list" parent="lista_tareas.menu_2" action="lista_tareas.action_window"/>
    <menuitem name="Global" id="lista_tareas.menu_3_list" parent="lista_tareas.menu_2" action="lista_tareas.action_window"/>
    <menuitem name="Dentro del menu" id="lista_tareas.menu_4_list" parent="lista_tareas.menu_3" action="lista_tareas.action_window"/>

    
  </data>
</odoo>